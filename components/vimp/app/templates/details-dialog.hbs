{{#modal-dialog close='closeModal' size='full'}}
    <div class="title">
        <a class="close-reveal-modal" aria-label="Close">&times;</a>
        <h4 class="name">{{model.name}}</h4>
        <h4 class="author">({{model.author.login}} - {{model.githubStarCount}} <i class="fa fa-github"></i>)</h4>
    </div>
    <div class="readme">
        {{{view.readme}}}
    </div>
{{/modal-dialog}}
