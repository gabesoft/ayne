{{#modal-dialog close='closeModal' size=modalSize closeTimeout=closeTimeout}}
    <div class="title">
        <a class="close-reveal-modal" aria-label="Close">&times;</a>
        <h4 class="name">{{model.name}}</h4>
        <h4 class="author">({{model.author.login}} - {{model.githubStarCount}} <i class="fa fa-github"></i>)</h4>
    </div>
    {{#if hasReadme}}
        <div class="readme">{{{view.readme}}}</div>
    {{else}}
        <div><span class="warn">This plugin does not have a readme file</span></div>
    {{/if}}
{{/modal-dialog}}
