<div class="plug-view">
    <div class="title row">
        <div class="pull-left">
            <h5 class="plug-title {{if model.hasReadme 'has-readme'}}">
                <a class="name" href="javascript:void(0)" {{action 'showModal' 'details-dialog' model}}>{{model.name}}</a>
            </h5>
        </div>

        <div class="pull-right">
            <h5 class="plug-author-info">
                <a href="{{model.author.html_url}}" target="_blank">
                    {{author}}
                </a>
                -
                <a href="{{model.githubHtmlUrl}}" target="_blank">
                    {{model.githubStarCount}} <i class="fa fa-lg fa-github"></i>
                </a>
            </h5>
        </div>
    </div>

    <div class="{{if aboveThreshold 'plugin'}} description row">
        <dl>
            <dd class="certainty">{{model.isPlugin}}</dd>
            <dd class="created-at">created: {{createdAt}}, latest commit: {{pushedAt}}</dd>
            <dd class="description">{{model.description}}</dd>
        </dl>
    </div>
</div>
