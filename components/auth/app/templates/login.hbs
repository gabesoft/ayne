<form class="inner-wrap">
    <fieldset>
        <legend>Enter your credentials below</legend>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                {{input
                value=email
                type="text"
                name="email"
                aria-label="email"
                required="true"
                placeholder="Enter your email" }}
            </div>
            {{#if error.email}}
                <small class="error">{{error.email}}</small>
            {{/if}}
        </div>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                {{input
                value=password
                type="password"
                name="password"
                aria-label="password"
                placeholder="Enter your password"}}
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                {{#if error.form}}
                    <small class="error">{{error.form}}</small>
                {{/if}}
            </div>
        </div>
    </fieldset>
    <fieldset>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <button class="button small" type="button" {{bind-attr disabled=invalid}} {{action 'authenticate'}}>
                    <i class="fa fa-sign-in"></i>
                    Login
                </button>
            </div>
        </div>
    </fieldset>
</form>
