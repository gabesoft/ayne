<div class="row margin-top-30">
  <div class="medium-8 large-6 columns">
    <div>
      {{query-input value=search tags=tagsData action="searchUrls" error=queryError pending=searchPending}}
    </div>
  </div>
</div>
<div class="margin-bottom-30 row">

  <div class="medium-8 large-6 columns url-list">
    <ul>
      {{#each model.urls as |url|}}
        <li class="url-item">
          {{render 'url-view' url}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="medium-4 large-6 columns query-list">
    <ul>
      {{#each model.queries as |query|}}
        <li class="query-item">
          {{query-view model=query runQuery="runQuery"}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>
