<div class="grid-frame">
    <div class="grid-block">
        <div class="grid-content">
            <fieldset>
                <legend>Enter Url</legend>

                <label>Url
                    <span class="inline-label">
                        {{input
                        name="url"
                        type="url"
                        key-up="getUrlMeta"
                        focus-out="getUrlMeta"
                        value=displayHref}}
                        <span class="form-label">
                            {{view 'favicon' src=model.favicon }}
                        </span>
                    </span>
                </label>

                <label>Title
                    <span class="inline-label">
                    {{input
                    name="title"
                    type="text"
                    value=model.title}}
                    {{#if pendingMeta}}
                        <span class="form-label">
                            <i class="fa fa-cog fa-spin"></i>
                        </span>
                    {{/if}}
                    </span>
                </label>

                <label>Tags (lowercase words, no spaces)
                    {{tags-input
                    name="tags"
                    valueAutocomplete=tagsData
                    value=model.tags}}
                </label>

                <label>Private
                    <div class="switch radius">
                        {{input
                        name="private"
                        type="checkbox"
                        id="private-switch"
                        checked=private}}
                        <label for="private-switch"></label>
                    </div>
                </label>

                <label>Notes
                    {{textarea
                    name="notes"
                    rows="3"
                    value=model.notes}}
                </label>

                <button class="button small" type="button" disabled={{disableSubmit}} {{action 'save'}}>
                    <i class="fa fa-bookmark"></i>
                    Save
                </button>
                {{#if showDelete}}
                <button class="button secondary small" type="button" disabled={{disableDelete}} {{action 'remove'}}>
                        <i class="fa fa-trash"></i>
                        Delete
                    </button>
                {{/if}}
            </fieldset>
        </div>
        <div class="grid-content show-for-medium-up">
            <ul class="side-nav">
                {{#each url in recentUrls}}
                <li>
                    <a href={{url.href}} target="_blank">
                        {{view 'favicon' src=url.favicon }}
                        {{url.title}}
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
