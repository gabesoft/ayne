<div class="grid-frame">
    <div class="medium-8 grid-block">
        <div class="grid-content">
            <fieldset>
                <legend>Enter Url</legend>

                <label>Name
                    {{input
                    name="name"
                    type="text"
                    disabled=true
                    value=name}}
                </label>

                <label>Url
                    <span class="inline-label">
                        {{input
                        name="url"
                        type="url"
                        value=href}}
                        <span class="form-label">
                            <img class="pull-right" {{bind-attr src=favicon}} alt="favicon">
                        </span>
                    </span>
                </label>

                <label>Title
                    {{input
                    name="title"
                    type="text"
                    value=title}}
                </label>

                <label>Tags (lowercase words, no spaces)
                    {{tags-input
                    name="tags"
                    value=tags}}
                </label>

                <label>Private
                    <div class="switch radius">
                        {{input
                        name="private"
                        type="checkbox"
                        id="private-switch"
                        checked=private}}
                        <label for="private-switch"></label>
                    </div>
                </label>

                <label>Notes
                    {{textarea
                    name="notes"
                    rows="3"
                    value=notes}}
                </label>

                <button class="button small" type="button" {{bind-attr disabled=disableSubmit}} {{action 'save'}}>
                    <i class="fa fa-bookmark"></i>
                    Save
                </button>
            </fieldset>
        </div>
        <!--<div class="grid-content show-for-medium-up"></div>-->
    </div>
</div>
