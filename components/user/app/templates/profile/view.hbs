<div class="row">
    <div class="text-center">
        <div class="panel margin-top-30 profile-view">
            <div class="text-center">
                <img {{bind-attr src=gravatarUrl}}>
            </div>
            <div class="card-divider profile-name">
                {{displayName}}
            </div>
            <div class="card-section">
                <p>{{firstName}} {{lastName}}</p>
                <p>{{location}}</p>
            </div>
        </div>
    </div>
</div>
