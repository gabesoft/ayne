<fieldset>
    {{partial 'partials/legend'}}
    <div class="row">
        <div class="small-12 medium-6 large-4 columns">
            {{#if requireOldPassword}}
                <label>
                    Old Password
                    {{input
                    value=oldPassword
                    type="password"
                    name="old-password" }}
                </label>
            {{/if}}

            {{partial 'partials/password-input'}}
            {{partial 'partials/password-verify-input'}}
        </div>
    </div>
    <div class="row">
        <div class="medium-6 large-4 columns">
            <button class="button small" type="button" {{bind-attr disabled=disableSubmit}} {{action 'save'}}>
                <i class="fa fa-lock"></i> Change
            </button>
        </div>
    </div>
</fieldset>

