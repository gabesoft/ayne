<div class="row">
    <form class="medium-8 medium-offset-2 large-4 large-offset-4 columns" action="">
        <fieldset class="panel">
            {{partial 'user/app/partials/legend'}}
            <div {{bind-attr class="alertClass :alert-box"}}>
                {{{alertText}}}
            </div>
            {{partial 'user/app/partials/email-input'}}

            <!-- This input is needed to avoid a page submit on enter -->
            <input style="display:none" type="text">

            <button class="button small" type="button" {{bind-attr disabled=disableSubmit}} {{action 'reset'}}>
                {{#if resetPending}}
                <i class="fa fa-spin fa-cog"></i>
                {{else}}
                <i class="fa fa-lock"></i>
                {{/if}}
                Reset Password
            </button>
            <button class="button secondary small" type="button" {{action 'redirectToLogin'}}>
                <i class="fa fa-sign-in"></i>
                Cancel
            </button>
        </fieldset>
    </form>
</div>
