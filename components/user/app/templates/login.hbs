<form action="">
    <fieldset>
        {{partial 'partials/legend'}}
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                {{input
                value=email
                type="email"
                name="email"
                aria-label="email"
                required=true
                class=error.email:error
                placeholder="Enter your email" }}
                {{#if error.email}}
                    <small class="error">{{error.email}}</small>
                {{/if}}

                {{input
                value=password
                type="password"
                name="password"
                aria-label="password"
                placeholder="Enter your password"}}
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <button class="button small" type="button" {{bind-attr disabled=disableSubmit}} {{action 'authenticate'}}>
                    {{#if authenticatePending}}
                        <i class="fa fa-spin fa-cog"></i>
                    {{else}}
                        <i class="fa fa-sign-in"></i>
                    {{/if}}
                    Log In
                </button>
                <button class="button secondary small" type="button" {{action 'redirectToSignup'}}>
                    <i class="fa fa-user"></i>
                    Register
                </button>
            </div>
        </div>
    </fieldset>
</form>
