<div class="row">
  <form class="medium-8 medium-offset-2 large-4 large-offset-4 columns" action="">
    <fieldset class="panel callout">
      {{partial 'partials/legend'}}
      {{partial 'partials/email-input'}}
      {{partial 'partials/password-input'}}
      {{partial 'partials/password-verify-input'}}
      <button class="button small" type="button" disabled={{disableSubmit}} {{action 'save'}}>
        {{#if createUserPending}}
          <i class="fa fa-spin fa-cog"></i>
        {{else}}
          <i class="fa fa-user"></i>
        {{/if}}
        Register
      </button>
      <button class="button secondary small" type="button" {{action 'redirectToLogin'}}>
        <i class="fa fa-sign-in"></i>
        Log In
      </button>
    </fieldset>
  </form>
</div>
