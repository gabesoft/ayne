<div class="row">
    <form class="medium-8 medium-offset-2 large-4 large-offset-4 columns" action="">
        <fieldset class="panel callout">
            {{partial 'user/app/partials/legend'}}
            {{partial 'user/app/partials/email-input'}}
            {{partial 'user/app/partials/password-input'}}
            {{partial 'user/app/partials/password-verify-input'}}
            <button class="button small" type="button" {{bind-attr disabled=disableSubmit}} {{action 'createUser'}}>
                {{#if createUserPending}}
                <i class="fa fa-spin fa-cog"></i>
                {{else}}
                <i class="fa fa-user"></i>
                {{/if}}
                Register
            </button>
            <button class="button secondary small" type="button" {{action 'redirectToLogin'}}>
                <i class="fa fa-sign-in"></i>
                Log In
            </button>
        </fieldset>
    </form>
</div>
